   
    <%= form_for(@note) do|f| %>
     
    
    <p>タイトル:</p>
    <%= f.text_field :title %>   
    <% if @note.errors.messages[:title].any? %>
    <span class="error"><%= @note.errors.messages[:title][0] %></span>
    <% end %>
   

    
    <p>内容:</p>
    <%= f.text_area :content,class: "note-textarea" %>
    <% if @note.errors.messages[:content].any? %>
    <span class="error"><%= @note.errors.messages[:content][0] %></span>
    <% end %>
   <%= f.hidden_field :user_id, :value => current_user.email %>
        

    <%= f.submit "完了"%>
<% end %>

